<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GmeActivity"
    android:weightSum="10"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/colorNegro"
    >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="10"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2048!"
                android:textSize="50dp"
                android:layout_weight="2"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="@color/Blanco"
                android:fontFamily="serif-monospace"


                    />

            <Button
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="SCORE\n0"
                android:textColor="@color/Blanco"
                android:textStyle="bold"
                android:fontFamily="serif-monospace"
                android:textSize="20dp"
                android:background="@color/colorNegro"
                android:layout_marginTop="5dp"
                />

            <Button
                android:id="@+id/best"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="BEST\n0"
                android:textColor="@color/Blanco"
                android:textStyle="bold"
                android:fontFamily="serif-monospace"
                android:textSize="20dp"
                android:background="@color/colorNegro"
                android:layout_margin="5dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join the numbers and get together to the "
                android:padding="5dp"
                android:textColor="@color/Blanco"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2048"
                android:fontFamily="serif-monospace"
                android:textSize="20dp"
                android:textColor="@color/Blanco"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/BtnRestart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restart? :'("
                android:textSize="25dp"
                android:textColor="@color/Blanco"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:layout_weight="1"
                android:background="@color/colorNegro"/>
        </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6">

        <TextView
            android:id="@+id/gameOver"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Game Over!"
            android:textSize="60dp"
            android:gravity="center"
            android:elevation="8dp"
            android:visibility="invisible"
            android:textColor="@color/Blanco"/>

        <GridLayout
            android:id="@+id/Grid1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:columnOrderPreserved="true"
            android:rowCount="4"
            android:padding="14dp"
            android:visibility="visible"
            android:background="@color/colorNegro">

            <!-- ROW 1 -->

            <Button
                android:id="@+id/game_0_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button_border"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/AzulNeon"
                android:layout_margin="3dp"
                />

            <Button
                android:id="@+id/game_0_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button_border"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/neon2"
                android:layout_margin="3dp"
                />

            <Button
                android:id="@+id/game_0_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button_border"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/neon3"
                android:layout_margin="3dp"
                />

            <Button
                android:id="@+id/game_0_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button_border"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/neon4"
                android:layout_margin="3dp"
                />

            <!-- ROW2 -->

            <Button
                android:id="@+id/game_1_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button_border"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/neon5"
                android:layout_margin="3dp"
                />

            <Button
                android:id="@+id/game_1_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button_border"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/AzulNeon"
                android:layout_margin="3dp"
                />

            <Button
                android:id="@+id/game_1_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button_border"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/neon2"
                android:layout_margin="3dp"
                />

            <Button
                android:id="@+id/game_1_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button_border"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/neon3"
                android:layout_margin="3dp"
                />

            <!-- ROW 2 -->

            <Button
                android:id="@+id/game_2_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button_border"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/neon4"
                android:layout_margin="3dp"
                />

            <Button
                android:id="@+id/game_2_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button_border"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/neon5"
                android:layout_margin="3dp"
                />

            <Button
                android:id="@+id/game_2_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button_border"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/AzulNeon"
                android:layout_margin="3dp"
                />

            <Button
                android:id="@+id/game_2_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button_border"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/neon2"
                android:layout_margin="3dp"
                />

            <!-- ROW 3 -->

            <Button
                android:id="@+id/game_3_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button_border"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/neon3"
                android:layout_margin="3dp"
                />

            <Button
                android:id="@+id/game_3_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button_border"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/neon4"
                android:layout_margin="3dp"
                />

            <Button
                android:id="@+id/game_3_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button_border"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/neon5"
                android:layout_margin="3dp"
                />

            <Button
                android:id="@+id/game_3_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button_border"
                android:text="2"
                android:textSize="30dp"
                android:textColor="@color/AzulNeon"
                android:layout_margin="3dp"
                />





        </GridLayout>

    </FrameLayout>

</LinearLayout>
